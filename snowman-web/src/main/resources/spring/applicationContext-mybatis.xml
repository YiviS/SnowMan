<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- myBatis配置SqlSessionFactoryBean -->
    <bean id="mySqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="configLocation" value="classpath:/mybatis/mybatis-config.xml"/>
        <!-- typeAliasesPackage 多值可逗号分隔 -->
        <property name="typeAliasesPackage" value="com.yivis.snowman.sys.entity,com.yivis.custom.entity"/>
        <property name="mapperLocations" value="classpath*:/mybatis/mapping/**/**.xml"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <!-- basePackage 多值可逗号分隔 -->
        <property name="basePackage" value="com.yivis.snowman.sys.dao,com.yivis.custom.dao"/>
        <!--<property name="markerInterface" value="com.hongguaninfo.hgdf.adp.core.base.BaseSqlMapper"/>-->
        <property name="sqlSessionFactoryBeanName" value="mySqlSessionFactory"/>
    </bean>

    <!-- (事务管理)transaction manager, use JtaTransactionManager for global tx -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>